<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ModifyPasswordActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/modify_activity_close"
            android:text="关闭"
            style="@style/ActionBarTextViewStyle"/>
        <TextView
            android:text="修改/找回密码"
            style="@style/ActionBarTitleTextStyle"/>
        <TextView
            style="@style/ActionBarTextViewStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardPreventCornerOverlap="true"
            android:background="@drawable/shape_rectangle_textview"
            app:cardElevation="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="修改/找回密码"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:textSize="20sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="1dp"
                    android:background="#4fa3a3a3" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="账号"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:textSize="20sp"/>
                        <EditText
                            android:id="@+id/modify_account_number_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:hint="输入账号"
                            android:digits="123456789"
                            android:maxLength="8"
                            android:layout_marginRight="20dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="1dp"
                        android:background="#4fa3a3a3" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="标识"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:textSize="20sp"/>
                        <EditText
                            android:id="@+id/user_mark_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:hint="输入特殊标识"
                            android:layout_marginRight="20dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="1dp"
                        android:background="#4fa3a3a3" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="新密码"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:textSize="20sp"/>
                        <EditText
                            android:id="@+id/new_account_password_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:inputType="textPassword"
                            android:digits="123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:maxLength="8"
                            android:hint="输入新密码"
                            android:layout_marginRight="20dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="1dp"
                        android:background="#4fa3a3a3" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="新密码"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:textSize="20sp"/>
                        <EditText
                            android:id="@+id/confirm_new_account_password_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:inputType="textPassword"
                            android:digits="123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:maxLength="8"
                            android:gravity="center"
                            android:hint="再次输入新密码"
                            android:layout_marginRight="20dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="1dp"
                        android:background="#4fa3a3a3" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/modify_button"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:background="@drawable/login_button"
                            android:text="修改"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="1dp"
                        android:background="#4fa3a3a3" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>