<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    app:cardCornerRadius="20dp"
    app:cardPreventCornerOverlap="true"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardElevation="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/fab_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/holiday_fragment_distance_today"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="距今天365天" />

            <TextView
                android:id="@+id/holiday_fragment_holiday_time"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/holiday_fragment_distance_today"
                android:text="2021-02-18"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/holiday_fragment_holiday_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/holiday_fragment_holiday_time"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="节假日" />

        </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>