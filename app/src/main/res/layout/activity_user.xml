<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/user_activity_close"
            android:text="关闭"
            style="@style/ActionBarTextViewStyle"/>
        <TextView
            android:text="账号"
            style="@style/ActionBarTitleTextStyle"/>
        <TextView
            style="@style/ActionBarTextViewStyle"/>
    </LinearLayout>
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_user_login"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardPreventCornerOverlap="true"
            android:background="@drawable/shape_rectangle_textview"
            app:cardElevation="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登陆状态"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/login_state"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="未登陆"
                        android:textSize="20sp"
                        android:textColor="@color/red"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="1dp"
                    android:background="#4fa3a3a3" />
                <LinearLayout
                    android:id="@+id/have_login"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="账号"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/login_success_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="642359"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="1dp"
                        android:background="#4fa3a3a3" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="密码"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/login_success_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="642359"
                            android:inputType="textPassword"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="1dp"
                        android:background="#4fa3a3a3" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/exit_login_bt"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:background="@drawable/login_button"
                            android:text="退出登陆"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/not_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="账号"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:textSize="20sp"/>
                        <EditText
                            android:id="@+id/account_number_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:hint="支持1~9数字,最多8位"
                            android:digits="123456789"
                            android:maxLength="8"
                            android:layout_marginRight="20dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="1dp"
                        android:background="#4fa3a3a3" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="密码"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:textSize="20sp"/>
                        <EditText
                            android:id="@+id/account_password_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:inputType="textPassword"
                            android:hint="数字加字符,最多8位"
                            android:digits="123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:maxLength="8"
                            android:layout_marginRight="20dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="1dp"
                        android:background="#4fa3a3a3" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="记住"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:textSize="20sp"/>
                        <CheckBox
                            android:id="@+id/remeber_password_cb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="1dp"
                        android:background="#4fa3a3a3" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/login_bt"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:textSize="20sp"
                            android:background="@drawable/login_button"
                            android:text="登陆"/>
                        <Button
                            android:id="@+id/register_bt"
                            android:layout_marginLeft="30dp"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/login_button"
                            android:textSize="20sp"
                            android:text="注册"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="1dp"
                        android:background="#4fa3a3a3" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>